#  vim: set ts=4 sw=4 tw=80 ft=zsh et :
# diff-so-fancy no index wrapper
#
(( $+commands[diff-so-fancy] )) || return 0

unalias diff 2> /dev/null

function diff() {
  if [[ $# -eq 0 ]]; then
      echo "USAGE: diff file1 file2"
  else
      if [[ $+commands[git] ]]; then
          git diff --no-index $@
      else
          diff -u $@
      fi
  fi
}

# Autocomplete with files list
compdef '_files' diff

diff "$@"
