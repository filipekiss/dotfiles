# top-most EditorConfig file. Stop looking for files above this folder
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
insert_final_newline = true

# Markdown needs whitespace
[*.{md,markdown,mkd}]
trim_trailing_whitespace = false
insert_final_newline = false
max_line_length = 120

[Makefile]
indent_style = tab
indent_size = 4

# Python
[*.{py,rst}]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
end_of_line = LF

# YAML
[*.yml]
indent_style = space
indent_size = 2
end_of_line = LF
