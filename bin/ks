#!/usr/bin/env bash

# ks
# --------------------------------------------------------------------------------------------------
#
# Description
# -----------
# Switch to another tmux/mx session and kill the current one
# --------------------------------------------------------------------------------------------------

# Contributors
# ------------
# Filipe Kiss <eu@filipekiss.com.br> http://github.com/filipekiss
# --------------------------------------------------------------------------------------------------
#
# Version
# -------
# 0.1.0
# --------------------------------------------------------------------------------------------------
#
# Usage
# -----
# ks <session name>
# --------------------------------------------------------------------------------------------------

ks() {
    if [[ $# -eq 0 ]]; then
        echo "USAGE: ks session_name"
        exit 0
    fi
    SESSION="$1"
    if [ -z "$TMUX" ]; then
        tmux attach -t "$SESSION"
    else
        tmux switch-client -t "$SESSION" && tmux kill-session
    fi
}

ks "$@"
