#!/usr/bin/env zsh
(( ! $+functions[has_dotfiles_function] )) && [[ -e $HOME/.dotfiles/bin/dotfiles ]] && source $HOME/.dotfiles/bin/dotfiles "source"
(( ! $+functions[has_dotfiles_function] )) && echo "Something went wrong. Try again" && exit 1

help_message() {
  e_info " USAGE: git ignore <files> <to> <ignore>"
  exit 1
}

main() {
  ((!$#)) && help_message && exit 1
  for file_to_ignore in "$@"; do
    e_info "Ignored ${file_to_ignore}"
    echo "${file_to_ignore}" | tee -a '.gitignore'
  done;
}

main $@
